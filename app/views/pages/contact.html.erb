<!-- component -->
<div class="flex flex-col items-center">
<%= form_with url: "/pages/create_contact", model: @contact, scope: :contact, data: {turbo: false }, class: "w-full max-w-lg" do |f| %>

  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <%= f.label :name, "Full Name", class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <%= f.text_field :name, required: true, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
      <%= field_has_error(:name, @contact) %>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <%= f.label :email, "Email", class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <%= f.email_field :email, required: true, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
      <%= field_has_error(:email, @contact) %>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <%= f.label :message, "Message", class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <%= f.text_area :message, required: true, class: "no-resize appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500 h-48 resize-none" %>
      <%= field_has_error(:message, @contact) %>
    </div>
  </div>
    <div class="flex flex-wrap ml-24 mb-6">
    <div class="w-full px-3">
      <%= recaptcha_tags %>
    </div>
  </div>
  <div class="flex items-center text-center">
    <div class="w-full">
      <%= f.submit "Send", class:"shadow bg-teal-400 hover:bg-teal-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
  <% end %>
</form>
</div>
